<h1 class="text-center"><%= @project.name %> Project Comments:</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 mx-auto p-3 border border-dark">
            <section class="my-3">
            <% if @project.project_comments.any? %>
                <% @project.project_comments.each do |comment|%>
                    <h3><%= comment.title %></h3>
                    <p><%= comment.body %></p>
                <% end %>
            <% else %>
                <p>No comments, yet.</p>
            <% end %>
            </section>
            <%= link_to "Add A Comment", new_project_project_comment_path, class: "btn btn-primary btn-lg" %>
        </div>
    </div>
</div>